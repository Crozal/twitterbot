{
	"manifest_version": 2,

	"name": "Twitter my Google",
	"description": "A simple extension that posts your Google searches to Twitter in realtime.",
	"version": "1.0",

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"content_scripts": [ {
		"matches": [
			"*://*.google.com/*",
			"*://*.google.co.uk/*",
			"*://*.google.nl/*",
			"*://*.google.de/*",
			"*://*.google.fr/*",
			"*://*.google.be/*"
		],
		"js": [
			"js/jquery.min.js",
			"js/codebird.js",
			"js/analytics.js",
			"content.js"
		]
	} ],

	"options_page": "options.html",

	"web_accessible_resources": [
		"img/twitter.png",
		"css/popup.css"
	],

	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
