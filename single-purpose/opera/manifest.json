{
	"manifest_version": 2,

	"name": "Twitter my Google",
	"description": "A simple extension that posts your Google searches to Twitter in realtime.",
	"version": "1.0",

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"content_scripts": [ {
		"matches": [
			"*://*.google.com/*",
			"*://*.google.co.uk/*",
			"*://*.google.nl/*",
			"*://*.google.de/*",
			"*://*.google.fr/*",
			"*://*.google.be/*"
		],
		"js": [
			"lib/js/jquery.min.js",
			"lib/js/codebird.js",
			"content.js"
		]
	} ],

	"options_page": "options.html",

	"page_action": {
		"default_icon": "img/icon.png",
		"default_title": "My sample extension",
		"default_popup": "popup.html"
	}
}
